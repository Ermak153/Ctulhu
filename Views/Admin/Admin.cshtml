@model IEnumerable<Ctulhu.Models.Posts>

<div class="admin-panel">
    <h1>Панель администратора</h1>
    <form action="@Url.Action("Users", "Admin")" method="get">
        <button type="submit">Перейти в панель управления пользователями</button>
    </form>
    <div class="post1-list">
        @foreach (var post in Model)
        {
            <div class="post1">
                <h2>@post.Title</h2>
                <p>@post.Description</p>
                <p>Тег: @post.Tag</p>
                <p>Автор: @post.Author</p>
                <div class="actions">
                    <form asp-action="Approve" method="post">
                        <input type="hidden" name="id" value="@post.ID" />
                        <button type="submit">Одобрить</button>
                    </form>
                    <form asp-action="Reject" method="post">
                        <input type="hidden" name="id" value="@post.ID" />
                        <button type="submit">Отклонить</button>
                    </form>
                    <a asp-action="EditPost" asp-route-id="@post.ID">Редактировать</a>
                </div>
            </div>
        }
    </div>
</div>
